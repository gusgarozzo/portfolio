---
import stack from "../data/stack.json";
---

<section id="stack">
  <h2><span class="number">03 /</span> Stack Tecnol&oacute;gico</h2>
  
  <div class="stack-grid">
    {stack.map((group) => (
      <div class="stack-card">
        <h3>{group.category}</h3>
        <div class="pills">
          {group.skills.map((skill) => (
            <span class="pill">{skill}</span>
          ))}
        </div>
      </div>
    ))}
  </div>

  <style>
    section {
      padding: 4rem 0;
      position: relative;
    }

    @media (max-width: 768px) {
      section {
        padding: 2rem 0;
      }
    }

    h2 {
      font-size: 1.25rem;
      font-weight: 800;
      margin-bottom: 3.5rem;
      text-transform: uppercase;
      letter-spacing: 0.2em;
      color: var(--color-text);
      display: flex;
      align-items: center;
      gap: 1rem;
      position: relative;
    }

    h2 .number {
      color: var(--color-primary);
      opacity: 0.8;
      font-family: var(--font-mono, monospace);
    }

    /* Connector Node on the Hilo Conductor */
    h2::before {
      content: '';
      position: absolute;
      left: -2.05rem;
      width: 0.6rem;
      height: 0.6rem;
      background: var(--color-primary);
      border-radius: 50%;
      box-shadow: 0 0 10px rgba(74, 222, 128, 0.5);
      z-index: 2;
    }

    @media (max-width: 768px) {
      h2::before {
        left: -1.55rem;
        width: 0.5rem;
        height: 0.5rem;
      }
    }

    .stack-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
      gap: 2.5rem;
    }

    .stack-card {
      background: var(--color-background-off);
      border: 1px solid var(--color-border);
      border-radius: var(--radius-lg);
      padding: 2.5rem;
      transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
      box-shadow: var(--shadow-md);
    }

    .stack-card:hover {
      transform: translateY(-8px);
      border-color: var(--color-primary);
      box-shadow: var(--shadow-lg);
    }

    h3 {
      font-size: 0.75rem;
      margin-bottom: 1.5rem;
      color: #64748b; /* Muted gray for category labels */
      text-transform: uppercase;
      letter-spacing: 0.2em;
      font-weight: 800;
      opacity: 0.8;
    }

    .pills {
      display: flex;
      flex-wrap: wrap;
      gap: 0.75rem;
    }

    .pill {
      font-family: var(--font-mono, 'JetBrains Mono', monospace);
      font-size: 0.85rem;
      background: rgba(255, 255, 255, 0.03);
      color: #cbd5e1;
      padding: 0.5rem 1rem;
      border-radius: 8px;
      font-weight: 600;
      transition: all 0.25s ease;
      border: 1px solid rgba(255, 255, 255, 0.05);
    }

    .pill:hover {
      background: rgba(var(--color-primary-rgb), 0.1);
      color: var(--color-primary);
      border-color: var(--color-primary);
      transform: translateY(-2px);
    }

    :global([data-theme="light"]) .stack-card {
      background: #ffffff;
      border-color: rgba(0, 0, 0, 0.05);
      box-shadow: 0 10px 40px rgba(0, 0, 0, 0.05);
    }
    
    :global([data-theme="light"]) .pill {
      background: #f8fafc;
      color: #475569;
      border-color: rgba(0, 0, 0, 0.05);
    }
    
    :global([data-theme="light"]) h3 { color: #94a3b8; }
  </style>
</section>
