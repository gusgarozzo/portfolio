<script>
  function initTerminal() {
    const container = document.getElementById('console-content');
    if (!container) return;

    // Use current date for authentic logs
    const now = new Date();
    const timestamp = now.toLocaleString('en-US', { 
      month: '2-digit', 
      day: '2-digit', 
      year: 'numeric',
      hour: '2-digit',
      minute: '2-digit',
      second: '2-digit',
      hour12: true
    }).replace(',', '');

    // Authentic NestJS Production Logs
    const commandText = "npm run start:prod";
    const logs = [
      `<span class="nest-tag">[Nest]</span> <span class="nest-pid">12745</span>  - <span class="success-text">${timestamp}</span>     <span class="nest-tag">LOG</span> <span class="nest-context">[NestFactory]</span> <span class="success-text">Starting Nest application...</span>`,
      `<span class="nest-tag">[Nest]</span> <span class="nest-pid">12745</span>  - <span class="success-text">${timestamp}</span>     <span class="nest-tag">LOG</span> <span class="nest-context">[InstanceLoader]</span> <span class="success-text">AppModule dependencies initialized</span>`,
      `<span class="nest-tag">[Nest]</span> <span class="nest-pid">12745</span>  - <span class="success-text">${timestamp}</span>     <span class="nest-tag">LOG</span> <span class="nest-context">[RoutesResolver]</span> <span class="success-text">AppController {/}:</span>`,
      `<span class="nest-tag">[Nest]</span> <span class="nest-pid">12745</span>  - <span class="success-text">${timestamp}</span>     <span class="nest-tag">LOG</span> <span class="nest-context">[NestApplication]</span> <span class="check">✓</span> <span class="success-text">Nest application successfully started</span>`,
      `<span class="nest-tag">[Nest]</span> <span class="nest-pid">12745</span>  - <span class="success-text">${timestamp}</span>     <span class="nest-tag">LOG</span> <span class="nest-context">[NestApplication]</span> <span class="success-text">Listening on port</span> <span class="highlight-port">3000</span>`
    ];

    container.innerHTML = '';
    const wait = (ms) => new Promise(resolve => setTimeout(resolve, ms));
    
    const cursor = document.createElement('span');
    cursor.className = 'cursor';

    async function run() {
      await wait(600); 

      // --- PHASE A: Typing Command (Fast and Dry) ---
      const cmdLine = document.createElement('div');
      cmdLine.className = 'line';
      
      const promptSpan = document.createElement('span');
      promptSpan.className = 'prompt';
      promptSpan.textContent = '$';
      
      const cmdSpan = document.createElement('span');
      cmdSpan.className = 'cmd-text';
      
      cmdLine.appendChild(promptSpan);
      cmdLine.appendChild(document.createTextNode(' '));
      cmdLine.appendChild(cmdSpan);
      cmdLine.appendChild(cursor);
      container.appendChild(cmdLine);

      for (const char of commandText) {
        cmdSpan.textContent += char;
        cmdLine.appendChild(cursor); 
        await wait(25 + Math.random() * 25); // Faster typing
      }

      await wait(350); // Engine processing pause

      // --- PHASE B: System Logs (Staggered Pop-up) ---
      for (const logHTML of logs) {
        if (cursor.parentNode) cursor.parentNode.removeChild(cursor);
        
        const logLine = document.createElement('div');
        logLine.className = 'line';
        logLine.innerHTML = logHTML;
        
        container.appendChild(logLine);
        logLine.appendChild(cursor);
        
        await wait(60 + Math.random() * 80); // Subtle staggering
      }
    }

    run();
  }

  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initTerminal);
  } else {
    initTerminal();
  }
</script>
