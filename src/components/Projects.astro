---
import proyects from "../data/projects.json";
---

<section id="projects">
  <h2>Proyectos destacados</h2>
  <div class="projects-grid">
    {
      proyects.map((project) => (
        <article class="project-card">
          <div class="card-header">
            <h3>{project.title}</h3>
            <div class="links">
              {project.repoUrl && (
                <a href={project.repoUrl} target="_blank" rel="noopener" aria-label="Repositorio GitHub">
                  <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M9 19c-5 1.5-5-2.5-7-3m14 6v-3.87a3.37 3.37 0 0 0-.94-2.61c3.14-.35 6.44-1.54 6.44-7A5.44 5.44 0 0 0 20 4.77 5.07 5.07 0 0 0 19.91 1S18.73.65 16 2.48a13.38 13.38 0 0 0-7 0C6.27.65 5.09 1 5.09 1A5.07 5.07 0 0 0 5 4.77a5.44 5.44 0 0 0-1.5 3.78c0 5.42 3.3 6.61 6.44 7A3.37 3.37 0 0 0 9 18.13V22"></path></svg>
                </a>
              )}
              {project.demoUrl && (
                <a href={project.demoUrl} target="_blank" rel="noopener" aria-label="Demo en vivo">
                  <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"></path><polyline points="15 3 21 3 21 9"></polyline><line x1="10" y1="14" x2="21" y2="3"></line></svg>
                </a>
              )}
            </div>
          </div>
          
          <div class="project-content">
            <p class="brief-description">{project.briefDescription}</p>
            
            <div class="case-study">
              <div class="item">
                <span class="label">Problema</span>
                <p>{project.problema}</p>
              </div>
              
              <div class="item">
                <span class="label">Decisiones clave</span>
                <ul>
                  {project.decisiones.map(decision => <li>{decision}</li>)}
                </ul>
              </div>
              
              <div class="item">
                <span class="label">Resultado</span>
                <p>{project.resultado}</p>
              </div>
            </div>
          </div>

          <div class="tech-stack-container">
            <div class="separator"></div>
            <div class="tech-tags">
              {project.tech.map((tech) => (
                <span class="tag">{tech}</span>
              ))}
            </div>
          </div>
        </article>
      ))
    }
  </div>

  <style>
    section {
      margin-bottom: 4rem;
    }

    h2 {
      font-size: 2rem;
      margin-bottom: 2rem;
      position: relative;
      display: inline-block;
    }

    h2::after {
      content: '';
      position: absolute;
      bottom: 5px;
      left: 0;
      width: 100%;
      height: 8px;
      background: var(--color-primary);
      opacity: 0.2;
      z-index: -1;
      transform: skewX(-10deg);
    }

    .projects-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
      gap: 1.5rem;
    }

    .project-card {
      background: var(--color-background-off);
      border: 1px solid var(--color-border);
      border-radius: var(--radius-lg);
      padding: 1.25rem;
      transition: transform 0.2s ease, border-color 0.2s ease;
      display: flex;
      flex-direction: column;
      position: relative;
      overflow: hidden;
      height: 100%;
    }

    .project-card:hover {
      border-color: var(--color-primary);
      transform: translateY(-2px);
    }

    .card-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 0.75rem;
    }

    h3 {
      font-size: 1.2rem;
      font-weight: 800;
      margin: 0;
      color: var(--color-text);
      letter-spacing: -0.01em;
    }

    .links {
      display: flex;
      gap: 0.75rem;
    }

    .links a {
      color: var(--color-muted);
      transition: color 0.2s;
      opacity: 0.7;
    }

    .links a:hover {
      color: var(--color-primary);
      opacity: 1;
    }

    .project-content {
      flex: 1;
      display: flex;
      flex-direction: column;
      gap: 0.75rem;
    }

    .brief-description {
      font-size: 0.95rem;
      color: var(--color-muted);
      line-height: 1.4;
      margin: 0;
    }

    .case-study {
      display: flex;
      flex-direction: column;
      gap: 0.6rem;
    }

    .label {
      font-size: 0.75rem;
      font-weight: 800;
      text-transform: uppercase;
      color: var(--color-primary);
      letter-spacing: 0.05em;
      display: block;
      margin-bottom: 0.15rem;
    }

    .item p {
      font-size: 0.9rem;
      margin: 0;
      line-height: 1.4;
      color: var(--color-text);
    }

    .item ul {
      margin: 0;
      padding-left: 1.1rem;
      font-size: 0.9rem;
      color: var(--color-text);
      list-style-type: disc;
    }

    .item li {
      margin-bottom: 0.15rem;
      line-height: 1.3;
    }

    .tech-stack-container {
      margin-top: 1rem;
    }

    .separator {
      height: 1px;
      background: var(--color-border);
      width: 100%;
      margin-bottom: 0.75rem;
      opacity: 0.5;
    }

    .tech-tags {
      display: flex;
      flex-wrap: wrap;
      gap: 0.4rem;
    }

    .tag {
      font-size: 0.7rem;
      font-weight: 700;
      padding: 0.15rem 0.5rem;
      background: rgba(var(--color-primary-rgb), 0.05);
      border: 1px solid rgba(var(--color-primary-rgb), 0.1);
      color: var(--color-primary);
      border-radius: 4px;
    }

    :global([data-theme="light"]) .tag {
      background: var(--color-background-off);
      border-color: var(--color-border);
      color: var(--color-text-muted);
    }
  </style>
</section>