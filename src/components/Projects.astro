---
import proyects from "../data/projects.json";
---

<section id="projects">
  <h2><span class="number">01 /</span> Proyectos</h2>
  <div class="projects-grid">
    {
      proyects.map((project) => (
        <article class="project-card">
          <div class="level-1">
            <div class="card-header">
              <h3>{project.title}</h3>
              <div class="links">
                {project.repoUrl && (
                  <a href={project.repoUrl} target="_blank" rel="noopener" title="Ver Repositorio" aria-label="Repositorio GitHub">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M9 19c-5 1.5-5-2.5-7-3m14 6v-3.87a3.37 3.37 0 0 0-.94-2.61c3.14-.35 6.44-1.54 6.44-7A5.44 5.44 0 0 0 20 4.77 5.07 5.07 0 0 0 19.91 1S18.73.65 16 2.48a13.38 13.38 0 0 0-7 0C6.27.65 5.09 1 5.09 1A5.07 5.07 0 0 0 5 4.77a5.44 5.44 0 0 0-1.5 3.78c0 5.42 3.3 6.61 6.44 7A3.37 3.37 0 0 0 9 18.13V22"></path></svg>
                  </a>
                )}
                {project.demoUrl && (
                  <a href={project.demoUrl} target="_blank" rel="noopener" title="Ver API" aria-label="Demo en vivo">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"></path><polyline points="15 3 21 3 21 9"></polyline><line x1="10" y1="14" x2="21" y2="3"></line></svg>
                  </a>
                )}
              </div>
            </div>
            <p class="brief-description">{project.briefDescription}</p>
          </div>
          
          <div class="level-2">
            <div class="tech-tags">
              {project.tech.map((tech) => (
                <span class="tag">{tech}</span>
              ))}
            </div>

            <div class="case-study">
              <div class="item">
                <span class="label">Problema</span>
                <p>{project.problema}</p>
              </div>
              
              <div class="item">
                <span class="label">Estrategia</span>
                <ul>
                  {project.decisiones.map(decision => <li>{decision}</li>)}
                </ul>
              </div>
              
              <div class="item">
                <span class="label">Resultado</span>
                <p>{project.resultado}</p>
              </div>

              {project.keyFocus && (
                <div class="key-focus">
                  <code>{project.keyFocus}</code>
                </div>
              )}
            </div>
          </div>
        </article>
      ))
    }
    {proyects.length % 2 !== 0 && (
      <div class="grid-placeholder" aria-hidden="true">
        <div class="placeholder-content">
          <div class="pattern"></div>
          <span>Proyectos adicionales en desarrollo</span>
        </div>
      </div>
    )}
  </div>

  <style>
    section {
      padding: 4rem 0;
      position: relative;
    }

    @media (max-width: 768px) {
      section {
        padding: 2rem 0;
      }
    }

    h2 {
      font-size: 1.25rem;
      font-weight: 800;
      margin-bottom: 3rem;
      text-transform: uppercase;
      letter-spacing: 0.2em;
      color: var(--color-text);
      display: flex;
      align-items: center;
      gap: 1rem;
      position: relative;
    }

    h2 .number {
      color: var(--color-primary);
      opacity: 0.8;
      font-family: var(--font-mono, monospace);
    }

    /* Connector Node on the Hilo Conductor */
    h2::before {
      content: '';
      position: absolute;
      left: -2.05rem; /* Align with BaseLayout line */
      width: 0.6rem;
      height: 0.6rem;
      background: var(--color-primary);
      border-radius: 50%;
      box-shadow: 0 0 10px rgba(74, 222, 128, 0.5);
      z-index: 2;
    }

    @media (max-width: 768px) {
      h2::before {
        left: -1.55rem;
        width: 0.5rem;
        height: 0.5rem;
      }
    }

    .projects-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(340px, 1fr));
      gap: 2.5rem;
    }

    .project-card {
      background: var(--color-background-off);
      border: 1px solid var(--color-border);
      border-radius: var(--radius-lg);
      padding: 2.5rem;
      display: flex;
      flex-direction: column;
      gap: 2rem;
      height: 100%;
      transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
      box-shadow: var(--shadow-md);
    }

    .project-card:hover {
      transform: translateY(-8px) scale(1.01);
      border-color: var(--color-primary);
      box-shadow: var(--shadow-lg);
    }

    /* Nivel 1: Lectura Primaria */
    .level-1 {
      display: flex;
      flex-direction: column;
      gap: 1rem;
    }

    .card-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    h3 {
      font-size: 1.75rem;
      font-weight: 800;
      margin: 0;
      color: #f8fafc;
      letter-spacing: -0.03em;
    }

    .brief-description {
      font-size: 1.1rem;
      line-height: 1.6;
      color: #cbd5e1;
      margin: 0;
    }

    /* Nivel 2: Profundizaci√≥n Opcional */
    .level-2 {
      display: flex;
      flex-direction: column;
      gap: 1.5rem;
      padding-top: 1.5rem;
      border-top: 1px solid rgba(255, 255, 255, 0.08);
      opacity: 0.6;
      transition: opacity 0.3s ease;
    }

    .project-card:hover .level-2 {
      opacity: 1;
    }

    .tech-tags {
      display: flex;
      flex-wrap: wrap;
      gap: 0.6rem;
    }

    .tag {
      font-family: var(--font-mono, 'JetBrains Mono', monospace);
      font-size: 0.75rem;
      padding: 0.4rem 0.8rem;
      background: rgba(var(--color-primary-rgb), 0.08); /* Sutil green background */
      color: var(--color-primary);
      border: 1px solid rgba(var(--color-primary-rgb), 0.2);
      border-radius: 8px;
      font-weight: 700;
      text-transform: uppercase;
      letter-spacing: 0.05em;
    }

    .links {
      display: flex;
      gap: 1.25rem;
    }

    .links a {
      color: #94a3b8;
      transition: all 0.2s ease;
    }

    .links a:hover {
      color: var(--color-primary);
      transform: scale(1.15);
    }

    .case-study {
      display: flex;
      flex-direction: column;
      gap: 1rem;
    }

    .label {
      font-family: var(--font-mono, monospace);
      font-size: 0.65rem;
      text-transform: uppercase;
      letter-spacing: 0.15em;
      color: var(--color-primary);
      display: block;
      margin-bottom: 0.42rem;
      opacity: 0.9;
      font-weight: 800;
    }

    .item p, .item li {
      font-size: 0.9rem;
      line-height: 1.6;
      color: #94a3b8;
      margin: 0;
    }

    .item ul {
      margin: 0;
      padding-left: 1.1rem;
    }

    .key-focus {
      margin-top: 0.5rem;
    }

    .key-focus code {
      font-size: 0.75rem;
      background: rgba(0, 0, 0, 0.3);
      padding: 0.25rem 0.6rem;
      border-radius: 6px;
      color: #fde047; /* Highlight with yellow like in terminal */
      border: 1px solid rgba(255, 255, 255, 0.05);
    }

    /* Grid Placeholder Control */
    .grid-placeholder {
      border: 2px dashed rgba(255, 255, 255, 0.05);
      border-radius: 12px;
      display: flex;
      align-items: center;
      justify-content: center;
      min-height: 300px;
      background: rgba(255, 255, 255, 0.02);
    }

    .placeholder-content {
      text-align: center;
      color: #475569;
      font-family: var(--font-mono, monospace);
      font-size: 0.8rem;
      text-transform: uppercase;
      letter-spacing: 0.2em;
    }

    :global([data-theme="light"]) .project-card {
      background: #ffffff;
      border-color: rgba(0, 0, 0, 0.05);
      box-shadow: 0 10px 40px rgba(0, 0, 0, 0.05);
    }
    
    :global([data-theme="light"]) h3 { color: #0f172a; }
    :global([data-theme="light"]) .brief-description { color: #475569; }
    :global([data-theme="light"]) .level-2 { border-top-color: rgba(0, 0, 0, 0.05); }
    :global([data-theme="light"]) .item p { color: #64748b; }
  </style>
</section>