---
import proyects from "../data/projects.json";
---

<section id="projects">
  <h2>Proyectos destacados</h2>
  <div class="projects-grid">
    {
      proyects.map((project) => (
        <article class="project-card">
          <div class="card-header">
            <h3>{project.title}</h3>
            <div class="links">
              {project.repoUrl && (
                <a href={project.repoUrl} target="_blank" rel="noopener" aria-label="Repositorio GitHub">
                  <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M9 19c-5 1.5-5-2.5-7-3m14 6v-3.87a3.37 3.37 0 0 0-.94-2.61c3.14-.35 6.44-1.54 6.44-7A5.44 5.44 0 0 0 20 4.77 5.07 5.07 0 0 0 19.91 1S18.73.65 16 2.48a13.38 13.38 0 0 0-7 0C6.27.65 5.09 1 5.09 1A5.07 5.07 0 0 0 5 4.77a5.44 5.44 0 0 0-1.5 3.78c0 5.42 3.3 6.61 6.44 7A3.37 3.37 0 0 0 9 18.13V22"></path></svg>
                </a>
              )}
              {project.demoUrl && (
                <a href={project.demoUrl} target="_blank" rel="noopener" aria-label="Demo en vivo">
                  <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"></path><polyline points="15 3 21 3 21 9"></polyline><line x1="10" y1="14" x2="21" y2="3"></line></svg>
                </a>
              )}
            </div>
          </div>
          
          <p class="description" set:html={project.description} />
          
          {project.highlight && (
            <div class="highlight-box">
              <span class="highlight-icon">âœ¨</span>
              <p class="highlight-text" set:html={project.highlight} />
            </div>
          )}

          <div class="tech-tags">
            {project.tech.map((tech) => (
              <span class="tag">{tech}</span>
            ))}
          </div>
        </article>
      ))
    }
  </div>

  <style>
    section {
      margin-bottom: 4rem;
    }

    h2 {
      font-size: 2rem;
      margin-bottom: 2rem;
      position: relative;
      display: inline-block;
    }

    h2::after {
      content: '';
      position: absolute;
      bottom: 5px;
      left: 0;
      width: 100%;
      height: 8px;
      background: var(--color-primary);
      opacity: 0.2;
      z-index: -1;
      transform: skewX(-10deg);
    }

    .projects-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
      gap: 2rem;
    }

    .project-card {
      background: var(--color-background-off);
      border: 1px solid var(--color-border);
      border-radius: var(--radius-lg);
      padding: 1.5rem;
      transition: transform 0.3s ease, box-shadow 0.3s ease;
      display: flex;
      flex-direction: column;
      position: relative;
      overflow: hidden;
    }

    .project-card:hover {
      transform: translateY(-5px);
      box-shadow: var(--shadow-lg);
      border-color: var(--color-primary);
    }

    .project-card::before {
      content: "";
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 4px;
      background: var(--gradient-primary);
      opacity: 0;
      transition: opacity 0.3s ease;
    }

    .project-card:hover::before {
      opacity: 1;
    }

    .card-header {
      display: flex;
      justify-content: space-between;
      align-items: flex-start;
      margin-bottom: 1rem;
    }

    h3 {
      font-size: 1.25rem;
      font-weight: 700;
      margin: 0;
    }

    .links {
      display: flex;
      gap: 0.75rem;
    }

    .links a {
      color: var(--color-muted);
      transition: color 0.2s;
    }

    .links a:hover {
      color: var(--color-primary);
    }

    .description {
      font-size: 0.95rem;
      color: var(--color-text);
      line-height: 1.6;
      margin-bottom: 1.5rem;
      flex-grow: 1;
    }

    .highlight-box {
      background: var(--color-background-off);
      padding: 0.75rem;
      border-radius: var(--radius-md);
      margin-bottom: 1.5rem;
      display: flex;
      gap: 0.5rem;
      align-items: flex-start;
      font-size: 0.9rem;
    }

    .highlight-text {
      margin: 0;
      color: var(--color-text);
    }

    .tech-tags {
      display: flex;
      flex-wrap: wrap;
      gap: 0.5rem;
      margin-top: auto;
    }

    .tag {
      font-size: 0.75rem;
      font-weight: 600;
      padding: 0.25rem 0.75rem;
      background: var(--color-background-off);
      color: var(--color-muted);
      border-radius: 999px;
      text-transform: uppercase;
      letter-spacing: 0.05em;
    }
  </style>
</section>