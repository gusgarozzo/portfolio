---
import proyects from "../data/projects.json";
---

<section id="projects">
  <h2>Proyectos destacados</h2>
  <div class="projects-grid">
    {
      proyects.map((project) => (
        <article class="project-card">
          <div class="level-1">
            <div class="card-header">
              <h3>{project.title}</h3>
              <div class="links">
                {project.repoUrl && (
                  <a href={project.repoUrl} target="_blank" rel="noopener" title="Ver Repositorio" aria-label="Repositorio GitHub">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M9 19c-5 1.5-5-2.5-7-3m14 6v-3.87a3.37 3.37 0 0 0-.94-2.61c3.14-.35 6.44-1.54 6.44-7A5.44 5.44 0 0 0 20 4.77 5.07 5.07 0 0 0 19.91 1S18.73.65 16 2.48a13.38 13.38 0 0 0-7 0C6.27.65 5.09 1 5.09 1A5.07 5.07 0 0 0 5 4.77a5.44 5.44 0 0 0-1.5 3.78c0 5.42 3.3 6.61 6.44 7A3.37 3.37 0 0 0 9 18.13V22"></path></svg>
                  </a>
                )}
                {project.demoUrl && (
                  <a href={project.demoUrl} target="_blank" rel="noopener" title="Ver API" aria-label="Demo en vivo">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"></path><polyline points="15 3 21 3 21 9"></polyline><line x1="10" y1="14" x2="21" y2="3"></line></svg>
                  </a>
                )}
              </div>
            </div>
            <p class="brief-description">{project.briefDescription}</p>
          </div>
          
          <div class="level-2">
            <div class="tech-tags">
              {project.tech.map((tech) => (
                <span class="tag">{tech}</span>
              ))}
            </div>

            <div class="case-study">
              <div class="item">
                <span class="label">Problema</span>
                <p>{project.problema}</p>
              </div>
              
              <div class="item">
                <span class="label">Estrategia</span>
                <ul>
                  {project.decisiones.map(decision => <li>{decision}</li>)}
                </ul>
              </div>
              
              <div class="item">
                <span class="label">Resultado</span>
                <p>{project.resultado}</p>
              </div>

              {project.keyFocus && (
                <div class="key-focus">
                  <code>{project.keyFocus}</code>
                </div>
              )}
            </div>
          </div>
        </article>
      ))
    }
    {proyects.length % 2 !== 0 && (
      <div class="grid-placeholder" aria-hidden="true">
        <div class="placeholder-content">
          <div class="pattern"></div>
          <span>Proyectos adicionales en desarrollo</span>
        </div>
      </div>
    )}
  </div>

  <style>
    section {
      margin-bottom: 4rem;
    }

    h2 {
      font-size: 2rem;
      margin-bottom: 2rem;
      position: relative;
      display: inline-block;
    }

    h2::after {
      content: '';
      position: absolute;
      bottom: 5px;
      left: 0;
      width: 100%;
      height: 8px;
      background: var(--color-primary);
      opacity: 0.2;
      z-index: -1;
      transform: skewX(-10deg);
    }

    .projects-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(340px, 1fr));
      gap: 2rem;
    }

    .project-card {
      background: var(--color-background-off);
      border: 1px solid var(--color-border);
      border-radius: var(--radius-lg);
      padding: 2rem;
      display: flex;
      flex-direction: column;
      gap: 1.5rem;
      height: 100%;
      transition: all 0.2s ease;
    }

    .project-card:hover {
      border-color: var(--color-primary);
      box-shadow: var(--shadow-sm);
    }

    /* Nivel 1: Lectura Primaria */
    .level-1 {
      display: flex;
      flex-direction: column;
      gap: 0.75rem;
    }

    .card-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    h3 {
      font-size: 1.75rem;
      font-weight: 800;
      margin: 0;
      color: var(--color-text);
      letter-spacing: -0.02em;
    }

    .brief-description {
      font-size: 1.1rem;
      line-height: 1.6;
      color: var(--color-text);
      margin: 0;
    }

    /* Nivel 2: Profundizaci√≥n Opcional */
    .level-2 {
      display: flex;
      flex-direction: column;
      gap: 1.1rem;
      padding-top: 1.25rem;
      border-top: 1px dashed var(--color-border);
      opacity: 0.45;
      transition: opacity 0.3s ease;
    }

    .project-card:hover .level-2 {
      opacity: 0.85;
    }

    .tech-tags {
      display: flex;
      flex-wrap: wrap;
      gap: 0.4rem;
    }

    .tag {
      font-family: var(--font-mono, monospace);
      font-size: 0.65rem;
      padding: 0.15rem 0.5rem;
      background: rgba(var(--color-primary-rgb), 0.03);
      color: var(--color-text-muted);
      border: 1px solid var(--color-border);
      border-radius: 4px;
      font-weight: 600;
      text-transform: uppercase;
      letter-spacing: 0.02em;
    }

    .links {
      display: flex;
      gap: 1rem;
    }

    .links a {
      color: var(--color-text-muted);
      opacity: 0.5;
      transition: all 0.2s ease;
    }

    .links a:hover {
      color: var(--color-primary);
      opacity: 1;
    }

    .case-study {
      display: flex;
      flex-direction: column;
      gap: 0.8rem;
    }

    .label {
      font-family: var(--font-mono, monospace);
      font-size: 0.6rem;
      text-transform: uppercase;
      letter-spacing: 0.1em;
      color: var(--color-primary);
      display: block;
      margin-bottom: 0.2rem;
      opacity: 0.7;
      font-weight: 700;
    }

    .item p, .item li {
      font-size: 0.8rem;
      line-height: 1.5;
      color: var(--color-text-muted);
      margin: 0;
    }

    .item ul {
      margin: 0;
      padding-left: 1.1rem;
    }

    .key-focus {
      margin-top: 0.4rem;
    }

    .key-focus code {
      font-size: 0.7rem;
      background: var(--color-background);
      padding: 0.15rem 0.4rem;
      border-radius: 4px;
      color: var(--color-text-muted);
      border: 1px solid var(--color-border);
      opacity: 0.8;
    }

    /* Grid Placeholder Control */
    .grid-placeholder {
      border: 1px dashed var(--color-border);
      border-radius: var(--radius-lg);
      display: flex;
      align-items: center;
      justify-content: center;
      min-height: 200px;
      background: repeating-linear-gradient(
        45deg,
        transparent,
        transparent 10px,
        rgba(var(--color-text-rgb), 0.01) 10px,
        rgba(var(--color-text-rgb), 0.01) 20px
      );
      opacity: 0.5;
    }

    .placeholder-content {
      text-align: center;
      color: var(--color-text-muted);
      font-family: var(--font-mono, monospace);
      font-size: 0.75rem;
      text-transform: uppercase;
      letter-spacing: 0.1em;
    }

    :global([data-theme="light"]) .project-card {
      background: #fafafa;
    }
  </style>
</section>