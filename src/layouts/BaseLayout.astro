---
import '../styles/global.css';
import SEO from '../components/SEO.astro';

const { title, description } = Astro.props;
---

<!DOCTYPE html>
<html lang="es">
  <head>
    <SEO {title} {description} />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=JetBrains+Mono:wght@400;700&family=Work+Sans:wght@400;500;600;700&display=swap" rel="stylesheet">
    
    <script is:inline>
      const theme = (() => {
        if (typeof localStorage !== 'undefined' && localStorage.getItem('theme')) {
          return localStorage.getItem('theme');
        }
        return 'dark'; // Default to dark
      })();
      
      if (theme === 'light') {
        document.documentElement.setAttribute('data-theme', 'light');
      } else {
        document.documentElement.removeAttribute('data-theme');
      }
      
      window.localStorage.setItem('theme', theme);
    </script>
  </head>

  <body>
    <div class="bg-decoration">
      <div class="orb orb-1"></div>
      <div class="orb orb-2"></div>
    </div>

    <header class="site-header">
      <div class="header-content">
        <a href="/" class="logo">Gustavo Garozzo</a>
        <nav class="nav-links">
           <a href="#projects">Proyectos</a>
           <a href="#experience">Experiencia</a>
           <a href="#contact">Contacto</a>
           
           <button id="theme-toggle" aria-label="Toggle theme">
             <svg class="sun-icon" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="5"></circle><line x1="12" y1="1" x2="12" y2="3"></line><line x1="12" y1="21" x2="12" y2="23"></line><line x1="4.22" y1="4.22" x2="5.64" y2="5.64"></line><line x1="18.36" y1="18.36" x2="19.78" y2="19.78"></line><line x1="1" y1="12" x2="3" y2="12"></line><line x1="21" y1="12" x2="23" y2="12"></line><line x1="4.22" y1="19.78" x2="5.64" y2="18.36"></line><line x1="18.36" y1="5.64" x2="19.78" y2="4.22"></line></svg>
             <svg class="moon-icon" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"></path></svg>
           </button>
        </nav>
      </div>
    </header>

    <main>
      <div class="content-wrapper">
        <slot />
      </div>
    </main>

    <footer>
      <p>&copy; {new Date().getFullYear()} Gustavo Garozzo · Backend Developer · APIs & Integrations</p>
    </footer>

    <script>
      const handleToggleClick = () => {
        const element = document.documentElement;
        const currentTheme = element.getAttribute('data-theme');
        
        let newTheme; 
        if (currentTheme === 'light') {
          element.removeAttribute('data-theme');
          newTheme = 'dark';
        } else {
          element.setAttribute('data-theme', 'light');
          newTheme = 'light';
        }
        
        localStorage.setItem('theme', newTheme);
      };

      document.getElementById('theme-toggle').addEventListener('click', handleToggleClick);
    </script>

    <style>
      body {
        display: flex;
        flex-direction: column;
        min-height: 100vh;
      }

      .site-header {
        position: sticky;
        top: 0;
        z-index: 10;
        backdrop-filter: blur(12px);
        background: rgba(var(--color-background-rgb), 0.8);
        border-bottom: 1px solid var(--color-border);
        padding: 1rem 0;
      }

      .header-content {
        max-width: var(--max-width);
        margin: 0 auto;
        padding: 0 1.5rem;
        display: flex;
        justify-content: space-between;
        align-items: center;
      }

      .logo {
        font-weight: 700;
        font-size: 1.25rem;
        background: var(--gradient-primary);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        letter-spacing: -0.03em;
        text-decoration: none;
      }

      .nav-links {
        display: flex;
        align-items: center;
        gap: 1.5rem;
      }

      .nav-links a {
        font-size: 0.95rem;
        font-weight: 500;
        color: var(--color-text);
      }

      .nav-links a:hover {
        color: var(--color-primary);
      }

      /* Decorative Background */
      .bg-decoration {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: -1;
        overflow: hidden;
        pointer-events: none;
      }

      .orb {
        position: absolute;
        border-radius: 50%;
        filter: blur(80px);
        opacity: 0.4;
      }

      .orb-1 {
        top: -100px;
        left: -100px;
        width: 400px;
        height: 400px;
        background: var(--color-primary);
      }

      .orb-2 {
        bottom: -150px;
        right: -100px;
        width: 500px;
        height: 500px;
        background: var(--color-secondary);
      }

      #theme-toggle {
        background: none;
        border: none;
        cursor: pointer;
        padding: 0.5rem;
        color: var(--color-text);
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 50%;
        transition: background-color 0.2s;
        margin-left: 0.5rem;
      }

      #theme-toggle:hover {
        background-color: var(--color-background-off);
      }
      
      .sun-icon {
        display: block;
      }
      
      .moon-icon {
        display: none;
      }
      
      :global([data-theme="light"]) .sun-icon {
        display: none;
      }
      
      :global([data-theme="light"]) .moon-icon {
        display: block;
      }

      main {
        flex: 1;
        width: 100%;
      }

      .content-wrapper {
        max-width: var(--max-width);
        margin: 0 auto;
        padding: 0 1.5rem;
        position: relative; /* For the vertical line */
      }

      /* The Connecting "Hilo Conductor" */
      .content-wrapper::before {
        content: '';
        position: absolute;
        left: 1.5rem; /* Align with container padding */
        top: 0;
        bottom: 0;
        width: 1px;
        background: linear-gradient(
          to bottom,
          transparent,
          var(--color-border) 50px,
          var(--color-border) calc(100% - 50px),
          transparent
        );
        z-index: 1;
        opacity: 0.5;
      }

      @media (min-width: 768px) {
        .content-wrapper {
          padding-left: 5rem; /* Give space for the line + labels */
        }
        .content-wrapper::before {
          left: 3rem;
        }
      }

      footer {
        padding: 2rem;
        text-align: center;
        color: var(--color-muted);
        font-size: 0.9rem;
        border-top: 1px solid var(--color-border);
        margin-top: 4rem;
      }
    </style>
  </body>
</html>
